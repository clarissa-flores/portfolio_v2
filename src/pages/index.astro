---
import Layout from "../layouts/Layout.astro";
const pageTitle = "Clarissa Flores";
---

<Layout pageTitle={pageTitle}>
  <section id="hero">
    <h1>
      Clarissa Flores <span style="font-style: normal;">
        is a</span> full-stack developer <span style="font-style: normal;">building beautiful websites from</span> San Antonio, TX.
    </h1>
    <br />
    <img
      class="profile"
      src="/profile.jpg"
      alt="Clarissa Flores' headshot"
    /><br /><br>
    <div class="button">
      <a href="/Clarissa-Flores_Developer.pdf">
        <button class="button">Download CV</button>
      </a>
    </div>
  </section>
</Layout>
<style>
  /* Button */
  button {
    background: linear-gradient(to right, #bd93f9 0%, #ff79c6 100%);
    border: none;
    border-radius: 8px;
    color: #f8f8f2;
    font:
      600 16px "Victor Mono",
      monotype;
    padding: 8px 16px;
    transition:
      background-color 0.4s,
      color 0.4s;
  }

  button:hover {
    background: linear-gradient(to right, #bd93f9 0%, #ff79c6 100%);
    color: #282a36;
    cursor: pointer;
  }

  .button {
    text-align: center;
  }
</style>
